---
/**
 * index.astro
 * 
 * Hemifuture Landing Page
 * A creative collective building the Second Life.
 */

import BaseLayout from '../layouts/BaseLayout.astro';
import ParticleCanvas from '../components/ParticleCanvas.astro';
import BackgroundEffects from '../components/BackgroundEffects.astro';
import Hero from '../components/Hero.astro';
import Vision from '../components/Vision.astro';
import Pillars from '../components/Pillars.astro';
import Projects from '../components/Projects.astro';
import CTA from '../components/CTA.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout>
  <!-- Background Layers -->
  <ParticleCanvas />
  <BackgroundEffects />
  
  <!-- Main Content -->
  <main>
    <Hero />
    <Vision />
    <Pillars />
    <Projects />
    <CTA />
    <Footer />
  </main>
</BaseLayout>

<style>
  main {
    position: relative;
    z-index: var(--z-base);
  }
</style>
