---
/**
 * Orb.astro
 * 
 * Floating orb visual element with orbit rings.
 * Creates a magical, otherworldly centerpiece.
 */

interface Props {
  orbits?: number;
}

const { orbits = 3 } = Astro.props;
---

<div class="orb-visual">
  {Array.from({ length: orbits }).map((_, i) => (
    <div class={`orbit orbit-${i + 1}`} aria-hidden="true"></div>
  ))}
  <div class="orb-container">
    <div class="orb"></div>
  </div>
</div>

<style>
  .orb-visual {
    position: relative;
    height: 500px;
    width: 100%;
  }

  /* Floating Orb */
  .orb-container {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 300px;
    height: 300px;
  }

  .orb {
    width: 100%;
    height: 100%;
    border-radius: var(--radius-full);
    background: 
      radial-gradient(circle at 30% 30%, rgba(102, 126, 234, 0.8) 0%, transparent 50%),
      radial-gradient(circle at 70% 60%, rgba(240, 147, 251, 0.6) 0%, transparent 40%),
      radial-gradient(circle at 50% 50%, rgba(118, 75, 162, 0.9) 0%, transparent 60%);
    animation: 
      orbFloat var(--duration-ambient-normal) var(--ease-float) infinite,
      hueRotate var(--duration-ambient-slow) var(--ease-linear) infinite;
    box-shadow: var(--glow-aurora-lg), inset 0 0 60px rgba(255, 255, 255, 0.1);
  }

  .orb::before {
    content: '';
    position: absolute;
    top: 10%;
    left: 20%;
    width: 30%;
    height: 20%;
    background: radial-gradient(ellipse, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
    border-radius: var(--radius-full);
    filter: blur(5px);
  }

  /* Orbit Rings */
  .orbit {
    position: absolute;
    top: 50%;
    left: 50%;
    border: 1px solid rgba(102, 126, 234, 0.2);
    border-radius: var(--radius-full);
    animation: orbitRotate var(--duration-ambient-slower) var(--ease-linear) infinite;
  }

  .orbit::before {
    content: '';
    position: absolute;
    width: 8px;
    height: 8px;
    background: var(--color-aurora-400);
    border-radius: var(--radius-full);
    box-shadow: var(--glow-aurora-sm);
  }

  .orbit-1 {
    width: 350px;
    height: 350px;
    margin: -175px 0 0 -175px;
  }

  .orbit-1::before {
    top: 0;
    left: 50%;
    transform: translate(-50%, -50%);
  }

  .orbit-2 {
    width: 420px;
    height: 420px;
    margin: -210px 0 0 -210px;
    animation-duration: var(--duration-ambient-slower);
    animation-direction: reverse;
  }

  .orbit-2::before {
    top: 50%;
    right: 0;
    transform: translate(50%, -50%);
  }

  .orbit-3 {
    width: 480px;
    height: 480px;
    margin: -240px 0 0 -240px;
    animation-duration: var(--duration-ambient-slowest);
  }

  .orbit-3::before {
    bottom: 0;
    left: 50%;
    transform: translate(-50%, 50%);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .orb-visual {
      height: 400px;
    }

    .orb-container {
      width: 200px;
      height: 200px;
    }

    .orbit-1 {
      width: 250px;
      height: 250px;
      margin: -125px 0 0 -125px;
    }

    .orbit-2 {
      width: 300px;
      height: 300px;
      margin: -150px 0 0 -150px;
    }

    .orbit-3 {
      width: 340px;
      height: 340px;
      margin: -170px 0 0 -170px;
    }
  }
</style>
