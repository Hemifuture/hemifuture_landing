---
/**
 * CardGrid.astro
 *
 * Universal grid container for card layouts with stagger animations.
 * Handles responsive columns and scroll animations.
 */

interface Props {
  /** Number of columns (2, 3, or 4) */
  columns?: 2 | 3 | 4;
  /** Gap between cards */
  gap?: 'sm' | 'md' | 'lg';
  /** Stagger delay between cards (ms) */
  staggerDelay?: number;
  /** Additional CSS classes */
  class?: string;
}

const {
  columns = 3,
  gap = 'lg',
  staggerDelay = 150,
  class: className = ''
} = Astro.props;

const gapMap = {
  sm: 'var(--space-6)',
  md: 'var(--space-8)',
  lg: 'var(--space-12)'
};
---

<div
  class:list={['card-grid-container', `cols-${columns}`, className]}
  data-stagger-delay={staggerDelay}
>
  <!-- Header slot for titles, labels, etc. -->
  {Astro.slots.has('header') && (
    <header class="card-grid-header">
      <slot name="header" />
    </header>
  )}

  <!-- Grid content -->
  <div class="card-grid" style={`gap: ${gapMap[gap]}`}>
    <slot />
  </div>
</div>

<style>
  .card-grid-container {
    width: 100%;
  }

  .card-grid-header {
    text-align: center;
    margin-bottom: var(--space-16);
  }

  .card-grid {
    display: grid;
    width: 100%;
  }

  /* Column configurations */
  .cols-2 .card-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .cols-3 .card-grid {
    grid-template-columns: repeat(3, 1fr);
  }

  .cols-4 .card-grid {
    grid-template-columns: repeat(4, 1fr);
  }

  /* Responsive breakpoints */
  @media (max-width: 1024px) {
    .cols-3 .card-grid,
    .cols-4 .card-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 768px) {
    .cols-2 .card-grid,
    .cols-3 .card-grid,
    .cols-4 .card-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
