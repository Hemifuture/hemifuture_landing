---
/**
 * ScrollIndicator.astro
 * 
 * Animated scroll indicator for hero sections.
 */

interface Props {
  text?: string;
}

const { text = 'Explore' } = Astro.props;
---

<div class="scroll-indicator">
  <span class="scroll-text">{text}</span>
  <div class="scroll-line" aria-hidden="true"></div>
</div>

<style>
  .scroll-indicator {
    position: absolute;
    bottom: var(--space-12);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-2);
    opacity: 0;
    animation: fadeIn var(--duration-normal) var(--ease-out) var(--delay-2000) forwards;
  }

  .scroll-text {
    font-size: var(--text-caption-sm);
    letter-spacing: var(--tracking-ultra);
    text-transform: uppercase;
    color: var(--color-text-secondary);
  }

  .scroll-line {
    width: 1px;
    height: 60px;
    background: var(--gradient-fade-down);
    animation: scrollPulse var(--duration-ambient-fast) var(--ease-in-out) infinite;
  }
</style>
