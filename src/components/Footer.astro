---
/**
 * Footer.astro
 * 
 * Site footer with navigation links.
 */

interface Link {
  label: string;
  href: string;
}

interface Props {
  logo?: string;
  links?: Link[];
  copyright?: string;
}

const currentYear = new Date().getFullYear();

const defaultLinks: Link[] = [
  { label: 'GitHub', href: 'https://github.com/hemifuture' },
  { label: 'Discord', href: '#' },
  { label: 'Blog', href: '#' },
  { label: 'Contact', href: '#' }
];

const {
  logo = 'HEMIFUTURE',
  links = defaultLinks,
  copyright = `Â© ${currentYear} Hemifuture. Open source, open hearts.`
} = Astro.props;
---

<footer class="footer">
  <div class="footer-content">
    <div class="footer-logo">{logo}</div>
    
    <nav class="footer-links" aria-label="Footer navigation">
      {links.map(link => (
        <a href={link.href} class="footer-link">
          {link.label}
        </a>
      ))}
    </nav>
    
    <p class="footer-copy">{copyright}</p>
  </div>
</footer>

<style>
  .footer {
    padding: var(--space-16) var(--space-page-x);
    text-align: center;
    border-top: 1px solid var(--color-border-subtle);
  }

  .footer-content {
    max-width: var(--container-lg);
    margin: 0 auto;
  }

  .footer-logo {
    font-family: var(--font-display);
    font-size: var(--text-heading-sm);
    letter-spacing: var(--tracking-ultra);
    color: var(--color-text-secondary);
    margin-bottom: var(--space-6);
  }

  .footer-links {
    display: flex;
    justify-content: center;
    gap: var(--space-8);
    flex-wrap: wrap;
    margin-bottom: var(--space-8);
  }

  .footer-link {
    font-size: var(--text-body-xs);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: var(--transition-color);
  }

  .footer-link:hover {
    color: var(--color-aurora-400);
  }

  .footer-copy {
    font-size: var(--text-caption-md);
    color: var(--color-text-tertiary);
    margin: 0;
  }
</style>
