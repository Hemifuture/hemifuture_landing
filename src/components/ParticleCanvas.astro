---
/**
 * ParticleCanvas.astro
 * 
 * Interactive particle system background.
 * Creates a network of floating particles that react to mouse movement.
 */

interface Props {
  particleColor?: string;
  lineColor?: string;
  maxParticles?: number;
  connectionDistance?: number;
}

const {
  particleColor = 'rgba(102, 126, 234, VAR_ALPHA)',
  lineColor = 'rgba(102, 126, 234, VAR_ALPHA)',
  maxParticles = 150,
  connectionDistance = 120
} = Astro.props;
---

<canvas 
  id="particle-canvas" 
  class="particle-canvas"
  data-particle-color={particleColor}
  data-line-color={lineColor}
  data-max-particles={maxParticles}
  data-connection-distance={connectionDistance}
></canvas>

<style>
  .particle-canvas {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: var(--z-behind);
    pointer-events: none;
  }
</style>

<script>
  class ParticleSystem {
    canvas: HTMLCanvasElement;
    ctx: CanvasRenderingContext2D;
    particles: Particle[] = [];
    mouse = { x: null as number | null, y: null as number | null, radius: 150 };
    animationTime = 0;
    config: {
      particleColor: string;
      lineColor: string;
      maxParticles: number;
      connectionDistance: number;
    };

    constructor(canvas: HTMLCanvasElement) {
      this.canvas = canvas;
      this.ctx = canvas.getContext('2d')!;
      
      this.config = {
        particleColor: canvas.dataset.particleColor || 'rgba(102, 126, 234, VAR_ALPHA)',
        lineColor: canvas.dataset.lineColor || 'rgba(102, 126, 234, VAR_ALPHA)',
        maxParticles: parseInt(canvas.dataset.maxParticles || '150'),
        connectionDistance: parseInt(canvas.dataset.connectionDistance || '120')
      };

      this.init();
    }

    init() {
      this.resize();
      this.createParticles();
      this.bindEvents();
      this.animate();
    }

    resize() {
      this.canvas.width = window.innerWidth;
      this.canvas.height = window.innerHeight;
    }

    createParticles() {
      this.particles = [];
      const count = Math.min(
        (this.canvas.width * this.canvas.height) / 9000,
        this.config.maxParticles
      );

      for (let i = 0; i < count; i++) {
        this.particles.push(new Particle(this.canvas));
      }
    }

    bindEvents() {
      window.addEventListener('resize', () => {
        this.resize();
        this.createParticles();
      });

      window.addEventListener('mousemove', (e) => {
        this.mouse.x = e.clientX;
        this.mouse.y = e.clientY;
      });

      window.addEventListener('mouseout', () => {
        this.mouse.x = null;
        this.mouse.y = null;
      });
    }

    connectParticles() {
      const { connectionDistance, lineColor } = this.config;

      for (let a = 0; a < this.particles.length; a++) {
        for (let b = a + 1; b < this.particles.length; b++) {
          const dx = this.particles[a].x - this.particles[b].x;
          const dy = this.particles[a].y - this.particles[b].y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < connectionDistance) {
            const alpha = 0.1 * (1 - distance / connectionDistance);
            this.ctx.strokeStyle = lineColor.replace('VAR_ALPHA', alpha.toString());
            this.ctx.lineWidth = 0.5;
            this.ctx.beginPath();
            this.ctx.moveTo(this.particles[a].x, this.particles[a].y);
            this.ctx.lineTo(this.particles[b].x, this.particles[b].y);
            this.ctx.stroke();
          }
        }
      }
    }

    animate = () => {
      this.ctx.clearRect(0, 0, this.canvas.width, this.canvas.height);
      this.animationTime += 16;

      for (const particle of this.particles) {
        particle.update(this.animationTime, this.mouse);
        particle.draw(this.ctx, this.config.particleColor);
      }

      this.connectParticles();
      requestAnimationFrame(this.animate);
    };
  }

  class Particle {
    x: number;
    y: number;
    size: number;
    baseX: number;
    baseY: number;
    density: number;
    alpha: number;
    phase: number;

    constructor(canvas: HTMLCanvasElement) {
      this.x = Math.random() * canvas.width;
      this.y = Math.random() * canvas.height;
      this.size = Math.random() * 2 + 0.5;
      this.baseX = this.x;
      this.baseY = this.y;
      this.density = Math.random() * 30 + 1;
      this.alpha = Math.random() * 0.5 + 0.2;
      this.phase = Math.random() * Math.PI * 2;
    }

    draw(ctx: CanvasRenderingContext2D, colorTemplate: string) {
      ctx.fillStyle = colorTemplate.replace('VAR_ALPHA', this.alpha.toString());
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
      ctx.closePath();
      ctx.fill();
    }

    update(time: number, mouse: { x: number | null; y: number | null; radius: number }) {
      // Floating animation
      this.y = this.baseY + Math.sin(time * 0.001 + this.phase) * 20;
      this.x = this.baseX + Math.cos(time * 0.0005 + this.phase) * 10;

      // Mouse interaction
      if (mouse.x !== null && mouse.y !== null) {
        const dx = mouse.x - this.x;
        const dy = mouse.y - this.y;
        const distance = Math.sqrt(dx * dx + dy * dy);

        if (distance < mouse.radius) {
          const force = (mouse.radius - distance) / mouse.radius;
          const directionX = (dx / distance) * force * this.density;
          const directionY = (dy / distance) * force * this.density;
          this.x -= directionX;
          this.y -= directionY;
        }
      }
    }
  }

  // Initialize
  const canvas = document.getElementById('particle-canvas') as HTMLCanvasElement;
  if (canvas) {
    new ParticleSystem(canvas);
  }
</script>
